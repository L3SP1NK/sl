#!/bin/bash
## Display icon according to the current system temperature

set -euo pipefail

cpu_sensor='k10temp-pci-00c3'
gpu_sensor='radeon-pci-0100'

temp_usage_cpu=$(\
	sensors|\
	grep "${cpu_sensor}" -A2|\
	grep 'temp1'|\
	cut -d ':' -f 2|\
	tr -d '+ '|\
	cut -d '.' -f 1\
)

temp_usage_cpu_high=$(\
	sensors|\
	grep "${cpu_sensor}" -A2|\
	grep 'temp1'|\
	cut -d ':' -f 2|\
	tr -d '+ '|\
	cut -d '=' -f 2|\
	tr -d "Â°C)"|\
	cut -d '.' -f 1\
)

temp_usage_gpu=$(\
	sensors|\
	grep "${gpu_sensor}" -A2|\
	grep 'temp1'|\
	cut -d ':' -f 2|\
	tr -d '+ '|\
	cut -d '.' -f 1\
)

temp_usage_gpu_hyst=$(\
	sensors|\
	grep "${gpu_sensor}" -A2|\
	grep 'temp1'|\
	cut -d ':' -f 2|\
	tr -d '+ '|\
	cut -d 'C' -f 3|\
	cut -d '=' -f 2|\
	tr -d 'Â°'|\
	cut -d '.' -f 1\
)

if [[ "${temp_usage_cpu}" -gt "${temp_usage_cpu_high}" || "${temp_usage_gpu}" -gt "${temp_usage_gpu_hyst}" ]]; then
	warning_logo='ðŸŒ¡'
	echo -e "${warning_logo}"
else
	normal_logo='â›„'
	echo -e "${normal_logo}"
fi
